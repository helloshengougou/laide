/*侧边栏 开始*/
.sidebar{
    position: fixed;
    top: 0;
    right: 0;
    height: 100%;
    z-index: 1000;
    width: 40px;
    background-color: #6c6c6c;
    cursor: pointer;
}
@media(max-width:1240px){
    .sidebar{
        right: -40px;
    }
}
.sidebar .sidebar-top{
    position: absolute;
    top: 40px;
}
.sidebar .sidebar-middle{
    position: absolute;
    top: 50%;
    z-index: 2;
    margin-top: -150px;
}
.sidebar .sidebar-bottom{
    position: absolute;
    bottom: 0;
}
.sidebar .rt>div{
    padding: 18px 8px;
    /* background-color: ; */
}
.sidebar .rt>div{
    background:#6c6c6c url(../images/index/ico_tabs.png)  7px 59px no-repeat;
}
.sidebar .rt>div:last-child{
    background:#6c6c6c url(../images/index/ico_tabs.png)  50px 0 no-repeat;
}
.sidebar .rt>div>div{
    position: relative;
    width: 24px;
    height: 24px;
}
.sidebar .all-class-btn{
    background: url(../images/index/ico_tabs.png)  0 -84px no-repeat;
}
.sidebar .qrcode-btn{
    background: url(../images/index/ico_tabs.png)  0 -108px no-repeat;
}
.sidebar .myld-btn{
    background: url(../images/index/ico_tabs.png)  0 -132px no-repeat;
}
.sidebar .mycar-btn{
    background: url(../images/index/ico_tabs.png)  0 -156px no-repeat;
}
.sidebar .mycoupon-btn{
    background: url(../images/index/ico_tabs.png)  0 -180px no-repeat;
}
.sidebar .mytrack-btn{
    background: url(../images/index/ico_tabs.png)  0 -204px no-repeat;
}
.sidebar .top-btn{
    background: url(../images/index/ico_tabs.png)  0 -276px no-repeat;
}
.sidebar .rt>div:hover{
    background-color: #494949;
}
.sidebar .tips{
    display: block;
    /* overflow: hidden; */
    position: absolute;
    z-index: -150;
    top: -18px;
    right: -68px;
    width: 100px;
    height: 60px;
    line-height: 60px;
    text-align: center;
    font-size: 16px;
    color: #6c6c6c;
    background-color: transparent;
    transition: all .5s;
}
.sidebar .rt>div:hover .tips{
    right: 32px;
    background-color:rgba(0,0, 0,.7);
    color: #fff
}
.sidebar .sidebar-top .qrcode:hover{
    background-color:#fff;
}
.sidebar .qrcode:hover .qrcode-btn {
    background-position-x:-24px;
}
.sidebar  .qrcode-pic{
    display: none;
    position: absolute;
    top: -18px;
    right: 32px;
    width: 280px;
    height: 286px;
    line-height: 60px;
    text-align: center;
    transition: all .5s;
    background:transparent url(../images/index/qrcode.png) center center no-repeat;
}
.sidebar .qrcode:hover .qrcode-pic {
    display: block;
    background-color: #fff ;
    box-shadow: -2px 0 3px 0 #999;
    overflow: hidden;
}
.sidebar .sidebar-bottom>div{
    display: none;
}
.sidebar .all-class-list{
    position: fixed;
    top: 0;
    right: 40px;
    height: 100%;
    width: 240px;
    background-color: #f5f5f5;
    box-shadow: -2px 0 2px 0 #999999;
    padding: 0 20px;
    display: none;
}
.sidebar .all-class-list h2{
    padding: 10px 0;
    line-height: 30px;
    font-size: 16px;
    font-weight: bold;
    color: #333333;
}
.sidebar .all-class-list-box{
    position: absolute;
    left: 20px;
    right: 5px;
    top: 58px;
    bottom: 20px;
    padding: 0px;
    width: 255px;
    overflow: auto;
}
.sidebar .all-class-list-box::-webkit-scrollbar{
    width: 7px;
    height: 7px;
    background:none;
}
.sidebar .all-class-list-box::-webkit-scrollbar-track{
    color: #ccc;
    border-radius: 5px;
    -webkit-box-shadow: inset 0 0 5px rgba(0,0,0,.3);
    box-shadow: inset 0 0 5px rgba(0,0,0,.3) 
}
.sidebar .all-class-list-box::-webkit-scrollbar-thumb{
    color: #555;
    border-radius: 5px;
    -webkit-box-shadow: inset 0 0 5px rgba(0,0,0,.3);
    box-shadow: inset 0 0 5px rgba(0,0,0,.3) 
}
.sidebar .all-class-list li{
    padding-right: 15px;
    margin-bottom: 20px;
}
.sidebar .all-class-list h4{
    border-bottom: 1px solid #d9d9d9;
    font-weight: bold;
}
.sidebar .all-class-list h4 a,
.sidebar .all-class-list h4 span{
    font-size: 12px;
    line-height: 26px;
    color: #666;
}
.sidebar .all-class-list h4 .more{
   float: right;
}
.sidebar .all-class-list p a{
    line-height: 22px;
    margin-right: 10px;
    float: left;
}
.sidebar .all-class-list h4:hover span{
   color: #c51010
}
.sidebar .all-class-list h4:hover a{
    color: #c51010
 }
 .sidebar .all-class-list p a:hover{
    color: #c51010
}
.sidebar .all-class-list p{
    display: none;
}
.sidebar .sidebar-top .all-class,
.sidebar .sidebar-middle .all-class{
    background-color:#f5f5f5!important;
    background-position-x: 50px
}
.sidebar .active{
    background-position-x:-24px;
}
.sidebar .mycar-btn .num{
    position: absolute;
    top: -15px;
    left: 1px;
    width: 24px;
    height: 16px;
    background:url(../images/index/ico_tabs.png) -24px -60px no-repeat;
    line-height: 16px;
    text-align: center;
    color: #ffffff;
}
.sidebar .mycar,
.sidebar .myld{
    position: absolute;
    top: -18px;
    right: 32px;
    width: 280px;
    height: 238px;
    box-shadow: -2px 0 2px 0 #999999;
    background: #f5f5f5;
    display: none;
    z-index: 2;
}
.sidebar .mycar h3,
.sidebar .myld h3{
    width: 243px;
    margin: 20px auto;
    line-height: 30px;
    font-size: 16px;
    font-weight: bold;
    color: #333333;
}
.sidebar .mycar img{
    width: 240px;
    margin: 0 20px;
}

.sidebar .lt-active{
    display: block;
}
.sidebar .user-name-box{
    width: 243px;
    margin:  0 auto 30px;
    height: 54px;;
}
.sidebar .user-pic{
    float: left;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    padding: 2px;
    border: 3px solid #fff;
    /* position: relative; */
    overflow: hidden;
    background: url(../images/index/avatar21.png) 3px 0 no-repeat;
}
.sidebar .user-name{
    float: left;
    width: 170px;
    margin-left: 10px;
}
.sidebar .user-name span{
    font-size: 16px;
    color: #333333;
    font-weight: bold;
}
.sidebar .user-info{
    width: 243px;
    height: 54px;
    margin: 0 auto;
}
.sidebar .user-info a{
    display: block;
    float: left;
    height: 50px;
    width: 73px;
    padding-left: 5px;
    padding-top: 4px;
    border-radius: 4px;
    text-decoration: none;
    margin-left: 3px;
    line-height: 24px;
    color: #666666;
    background-color: #eee;
}
.sidebar .user-info strong{
   font-size: 14px;
}
.sidebar .user-info a:hover{
    color: #c51010;
}
/*侧边栏 结束*/